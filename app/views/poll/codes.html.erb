<h1><%= t('helper.codes') %></h1>

<%= link_to t('helper.result'), resultado_path %> | <%= link_to t('helper.back'), root_path %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>code</th>
      <th>value</th>
      <th>team_id</th>
    </tr>
  </thead>

  <tbody>
    <% @polls.each do |poll| %>
      <tr>
        <td><%= poll.id %></td>
        <td><%= poll.code %></td>
        <td><%= poll.value %></td>
        <td><%= poll.team_id %></td>
      </tr>
    <% end %>

    <tr>
      <td colspan="4" id="votes_count">
        <strong>Total de votos realizados: </strong> <%= @votes_count %>
      </td>
    </tr>
  </tbody>
</table>
